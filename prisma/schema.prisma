// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Infraction {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  type         String
  user         String
  author       String
  guild        String
  reason       String?
  creationdate DateTime
  timeuntil    Int?
  deleted      Boolean?
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userid String @unique
  points Int
  blocked Boolean?
}

model ApiUser {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  role   String
}

model Guild {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  guildid      String   @unique
  adminRoles   String[]
  alertChannel String?
  specialRole  String?
  preferedLang String?
}
